{
    "sources": {
        "HMP_fecal": {
            "display": "HMP",
            "mapping": "data/HMP/HMPv35_100nt.txt",
            "restrict": {
                "column": "@mapping bodysite",
                "values": [
                    "UBERON_stool"
                ],
                "unique": "hostsubjectid"
            }
        },
        "GG_fecal": {
            "display": "GG",
            "mapping": "data/GG/GG_100nt.txt",
            "restrict": {
                "column": "@mapping BODY_SITE",
                "values": [
                    "UBERON:feces"
                ],
                "unique": "HOST_SUBJECT_ID"
            }
        },
        "PGP_fecal": {  
            "display": "PGP",
            "mapping": "data/PGP/PGP_100nt.txt",
            "restrict": {
                "column": "@mapping body_product",
                "values": [
                    "UBERON:feces"
                ],
                "unique": "host_subject_id"
            }
        },
        "AG_fecal": {
            "display": "AG",
            "mapping": "data/AG/AG_100nt.txt",
            "biom": "data/AG/AG_100nt.biom.gz",
            "restrict": {
                "column": "@mapping BODY_PRODUCT",
                "values": [
                    "UBERON:feces"
                ],
                "unique": "HOST_SUBJECT_ID"
            }
        },
        "AG": {
            "display": "AG",
            "mapping": "data/AG/AG_100nt.txt"
        }
    },

