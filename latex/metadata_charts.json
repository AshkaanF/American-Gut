    "graphs": [
        {
            "name": "fig2_gender",
            "title": "Gender",
            "type": "stackedbar",
            "scaled": true,
            "legend": true,
            "dimension": [4,4],
            "legend_size":7,
            "y_label": "Number of Participants",
            "y_stratification": "fig2_gender_strata",
            "data": [
                {
                    "display": "HMP",
                    "source": "HMP_fecal",
                    "group-by": "id",
                    "column": "sex",
                    "aliases": {
                        "male": "males",
                        "female": "females"
                    },
                    "default": "Unknown"
                },
                {
                    "display": "GG",
                    "source": "GG_fecal",
                    "group-by": "id",
                    "column": "SEX",
                    "aliases": {
                        "male": "males",
                        "female": "females"
                    },
                    "default": "Unknown"
                },
                {
                    "display": "PGP",
                    "source": "PGP_fecal",
                    "group-by": "id",
                    "column": "Sex/Gender",
                    "aliases": {
                        "Male": "males",
                        "Female": "females"
                    },
                    "default": "Unknown"
                },
                {
                    "display": "AG",
                    "source": "AG_fecal",
                    "group-by": "id",
                    "column": "SEX",
                    "aliases": {
                        "male": "males",
                        "female": "females"
                    },
                    "default": "Unknown"
                }
            ]           
        },
        {
            "name": "fig2_age",
            "title": "Age",
            "type": "stackedbar",
            "scaled": true,
            "legend": true,
            "dimension": [4,4],
            "legend_size":7,
            "y_label": "Number of Participants",
            "y_stratification": "fig2_age_strata",
            "@var bins": {
                "80": "eighty",
                "70": "seventy",
                "60": "sixty",
                "50": "fifty",
                "40": "fourty",
                "30": "thirty",
                "20": "twenty",
                "13": "teen",
                "3": "child",
                "0": "baby"
            },
            "data": [
                {
                    "display": "HMP",
                    "source": "HMP_fecal",
                    "group-by": "bin",
                    "column": "AGE",
                    "bins": "@var bins",
                    "default": "Unknown"
                },
                {
                    "display": "GG",
                    "source": "GG_fecal",
                    "group-by": "bin",
                    "column": "AGE_IN_YEARS",
                    "bins": "@var bins",
                    "default": "Unknown"
                },
                {
                    "display": "PGP",
                    "source": "PGP_fecal",
                    "group-by": "id",
                    "column": "Age",
                    "aliases": {
                        "90-99 years":"eighty",
                        "80-89 years":"eighty",
                        "70-79 years":"seventy",
                        "60-69 years":"sixty",
                        "50-59 years":"fifty",
                        "40-49 years":"fourty",
                        "30-39 years":"thirty",
                        "21-29 years":"twenty"
                    },
                    "default": "Unknown"
                },
                {
                    "display": "AG",
                    "source": "AG_fecal",
                    "group-by": "bin",
                    "column": "AGE",
                    "bins": "@var bins",
                    "default": "Unknown"
                }
            ]           
        },
        {
            "name": "fig2_bmi",
            "title": "BMI",
            "type": "stackedbar",
            "scaled": true,
            "legend": true,
            "dimension": [3.5,4],
            "legend_size":6,
            "y_label": "Number of Participants",
            "y_stratification": "fig2_bmi_strata",
            "@var bins": {
                "40": "vso",
                "35": "vo",
                "30": "mo",
                "25": "o",
                "18.5": "n",
                "16": "u",
                "15": "su",
                "1": "vsu",
                "0": "Unknown"
            },
            "data": [
                {
                    "display": "HMP",
                    "source": "HMP_fecal",
                    "group-by": "bin",
                    "column": "bmi",
                    "bins": "@var bins",
                    "default": "Unknown"
                },
                {
                    "display": "AG",
                    "source": "AG_fecal",
                    "group-by": "bin",
                    "column": "BMI",
                    "bins": "@var bins",
                    "default": "Unknown"
                }
            ]           
        },
        {
            "name": "fig3_diet",
            "title": "Diet",
            "type": "bar",
            "x_stratification": "fig3_diet_strata",
            "dimension": [3.5,4],
            "y_label": "Number of Participants",
            "data": {
                "source": "AG_fecal",
                "column": "DIET_TYPE",
                "group-by": "id",
                "aliases": {
                    "Omnivore":"omnivore",
                    "Omnivore but no red meat":"nrm",
                    "Vegetarian but eat seafood":"pescetarian",
                    "Vegetarian":"vegetarian",
                    "Vegan":"vegan"
                },
                "default": "Unknown"
            }
        },
        {
            "name": "fig3_exercise",
            "title": "Exercise Frequency",
            "type": "bar",
            "x_stratification": "fig3_exercise_strata",
            "y_label": "Number of Participants",
            "dimension": [3.5,4],
            "data": {
                "source": "AG_fecal",
                "column": "EXERCISE_FREQUENCY",
                "group-by": "id",
                "aliases": {
                    "Never":"never",
                    "Rarely (few times/month)":"rarely",
                    "Rarely few times/month":"rarely",
                    "Occasionally (1-2 times/week)":"occasionally",
                    "Occasionally 1-2 times/week":"occasionally",
                    "Regularly (3-5 times/week)":"regularly",
                    "Regularly 3-5 times/week":"regularly",
                    "Daily":"daily"
                },
                "default": "Unknown"
            }
        },
        {
            "name": "fig3_vitamin",
            "title": "Vitamin Use",
            "type": "bar",
            "y_label": "Number of Participants",
            "x_stratification": "fig3_vitamin_strata",
            "dimension": [3,4],
            "data": {
                "source": "AG_fecal",
                "column": "MULTIVITAMIN",
                "group-by": "id",
                "aliases": {
                    "yes":"yes",
                    "no":"no"
                },
                "default": "Unknown"
            }
        }
    ]
